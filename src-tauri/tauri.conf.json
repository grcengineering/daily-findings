{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Daily Findings",
  "version": "0.1.0",
  "identifier": "com.dailyfindings.desktop",
  "build": {
    "devUrl": "http://127.0.0.1:3099",
    "beforeDevCommand": "npm run dev -- --port 3099",
    "beforeBuildCommand": "npm run tauri:prepare"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Daily Findings",
        "url": "http://127.0.0.1:1430",
        "width": 1280,
        "height": 860,
        "minWidth": 960,
        "minHeight": 640,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/**/*"
    ]
  }
}
