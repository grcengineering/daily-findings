{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Daily Findings",
  "version": "0.1.8",
  "identifier": "com.dailyfindings.desktop",
  "build": {
    "devUrl": "http://127.0.0.1:3099",
    "beforeDevCommand": "npm run dev -- --port 3099",
    "beforeBuildCommand": "npm run tauri:prepare"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Daily Findings",
        "url": "http://127.0.0.1:1430",
        "width": 1280,
        "height": 860,
        "minWidth": 960,
        "minHeight": 640,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self' http://127.0.0.1:1430; script-src 'self' 'unsafe-inline' 'unsafe-eval' blob: http://127.0.0.1:1430; style-src 'self' 'unsafe-inline' http://127.0.0.1:1430; img-src 'self' data: blob: https: http://127.0.0.1:1430; connect-src 'self' https: ws://127.0.0.1:1430 http://127.0.0.1:1430; font-src 'self' data:; frame-ancestors 'none';"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/**/*"
    ]
  }
}
